CREATE TABLE `m_tags_relations` (  `id` int(10) unsigned NOT NULL AUTO_INCREMENT,  `item_type` varchar(255) NOT NULL,  `item_id` int(10) unsigned NOT NULL,  `tag_id` int(10) unsigned NOT NULL,  PRIMARY KEY (`id`),  KEY `item_type` (`item_type`,`item_id`),  KEY `item_id` (`item_id`),  KEY `tag_id` (`tag_id`),  CONSTRAINT `m_tags_id_relation` FOREIGN KEY (`tag_id`) REFERENCES `m_tags` (`id`) ON DELETE CASCADE ON UPDATE CASCADE) ENGINE=InnoDB DEFAULT CHARSET=utf8